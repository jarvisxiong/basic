<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<context id="otsTables" targetRuntime="MyBatis3">

		<commentGenerator>
			<property name="suppressAllComments" value="true" />
			<property name="suppressDate" value="true" />
		</commentGenerator>
		<jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://192.168.0.34:3306/gds"
			userId="root" password="imike@2015">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>
		
		<javaModelGenerator targetPackage="com.fangbaba.basic.po" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		
		<sqlMapGenerator targetPackage="mappers" targetProject="src/main/resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<javaClientGenerator type="XMLMAPPER" targetPackage="com.fangbaba.basic.mappers" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
        
        <table tableName="city" domainObjectName="CityModel"></table>
        <table tableName="district" domainObjectName="DistrictModel"></table>
        <table tableName="hotel" domainObjectName="HotelModel"></table>
        <table tableName="province" domainObjectName="ProvinceModel"></table>
        <table tableName="room" domainObjectName="RoomModel"></table>
        <table tableName="roomtype" domainObjectName="RoomtypeModel"></table>
	</context>
</generatorConfiguration>